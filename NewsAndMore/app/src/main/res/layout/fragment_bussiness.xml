<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/text_view_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Business"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_business"
        android:layout_below="@+id/text_view_business"/>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bootm_navigation_world"
        app:labelVisibilityMode="labeled"
        android:background="?android:attr/windowBackground"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_view_business"
        android:layout_above="@+id/bottom_navigation_business"/>
</RelativeLayout>